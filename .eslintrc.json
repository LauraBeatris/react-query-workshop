{
  "root": true,
  "plugins": [
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "standard",
    "standard-react",
    "standard-jsx"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "sort-imports": [
      "error", { "ignoreCase": true, "ignoreDeclarationSort": true }
    ]
  },
  "globals": {
    "React": "writable"
  }
}
